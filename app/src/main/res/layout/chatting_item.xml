<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_chatting_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:paddingLeft="8dp"
        android:paddingTop="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_chatting_mag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_chatting_name"
        android:text="mag"
        android:padding="8dp"
        android:layout_marginLeft="24sp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="16dp"
        android:background="@drawable/bg_chatting"/>
    <TextView
        android:id="@+id/tv_chatting_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_chatting_mag"
        android:text="6:14"
        android:layout_below="@id/tv_chatting_name"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"/>

</RelativeLayout>